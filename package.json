{
	"name": "projcpp",
	"publisher": "simonaron",
	"displayName": "ProjCpp",
	"description": "C++ project manager and code runner",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:projcpp.runCode"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Compile command",
				"properties": {
					"conf.projcpp.compileCommand": {
						"type": "string",
						"description": "Command to use when compiling c++ files",
						"scope": "application"
					}
				}
			}
		],
		"commands": [
			{
				"command": "projcpp.runCode",
				"title": "Run Code",
				"icon": "./media/play-outline.svg"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "projcpp.runCode",
					"group": "navigation",
					"when": "editorLangId == cpp || editorLangId == c"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.4",
		"@types/node-7z": "^2.1.0",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"7zip-bin": "^5.1.0",
		"node-7z": "^2.1.2"
	}
}
