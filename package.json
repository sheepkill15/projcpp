{
	"name": "projcpp",
	"publisher": "simonaron",
	"displayName": "ProjCpp",
	"description": "C++ project manager and code runner",
	"version": "1.0.2",
	"repository": {
		"type": "git",
		"url": "https://github.com/sheepkill15/projcpp"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:projcpp.runCode",
		"onCommand:projcpp.projects",
		"onCommand:projcpp.refresh",
		"onCommand:projcpp.addProject",
		"onView:projcpp-sidebar"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"projcpp-sidebar-view": [
				{
					"type": "webview",
					"id": "projcpp-sidebar",
					"name": "ProjCpp",
					"icon": "./media/project.svg",
					"contextualTitle": "ProjCpp"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "projcpp-sidebar-view",
					"title": "ProjCpp",
					"icon": "./media/project.svg"
				}
			]
		},
		"configuration": [
			{
				"title": "Compile command",
				"properties": {
					"conf.projcpp.compileCommand": {
						"type": "string",
						"description": "Command to use when compiling c++ files",
						"scope": "application"
					}
				}
			}
		],
		"commands": [
			{
				"command": "projcpp.runCode",
				"title": "Run code",
				"icon": "./media/play-outline.svg",
				"category": "ProjCpp"
			},
			{
				"command": "projcpp.projects",
				"title": "Open projects",
				"category": "ProjCpp"
			},
			{
				"command": "projcpp.refresh",
				"category": "ProjCpp",
				"title": "Refresh"
			},
			{
				"command": "projcpp.addProject",
				"category": "ProjCpp",
				"title": "Add project"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "projcpp.runCode",
					"group": "navigation",
					"when": "editorLangId == cpp || editorLangId == c"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "rollup -c && webpack --mode production",
		"watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
		"package": "rollup -c && webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"build": "rollup -c",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-node-resolve": "^11.2.0",
		"@rollup/plugin-typescript": "^8.2.0",
		"@tsconfig/svelte": "^1.0.10",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.4",
		"@types/node-7z": "^2.1.0",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"concurrently": "^6.0.0",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"rollup": "^2.3.4",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.34.0",
		"svelte-check": "^1.1.36",
		"svelte-preprocess": "^4.6.9",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"7zip-bin": "^5.1.0",
		"node-7z": "^2.1.2"
	}
}
